if (theme && theme.widgets.contact)
  ul.widget-contact
    each kcontact, vcontact in theme.widgets.contact
      li.widget-contact__item
        - var contact_class = "widget-contact__link widget-contact__link--" + vcontact;
        - var contact_src = "/gfx/svg/" + vcontact + ".svg";
        if (kcontact == 'mail')
          - var contact_href = "mailto:" + kcontact;
        else
          - var contact_href = kcontact;
        a(href=contact_href class=contact_class)
          !=inline_svg(contact_src)
