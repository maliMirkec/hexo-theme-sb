if (theme && theme.menu && theme.menu.items)
  header.header
    nav.nav
      input.nav__checkbox(type="checkbox", id="NavToggle")
      label.nav__toggle(for="NavToggle") Toggle navigation
      - var navItems = Object.keys(theme.menu.items).length;
      - var navClass = 'nav__list';
      - var navClass = theme.menu.centered && theme.menu.display_logo && navItems % 2 == 0 ? 'nav__list nav__list--' + navItems : 'nav__list';
      ul(class=navClass)
        if (theme && theme.menu.display_logo && theme.site && theme.site.logo)
          li.nav__item
            a.nav__link(href="/")
              +inlineSvg(theme.site.logo)
        each knav, vnav in theme.menu.items
          li.nav__item
            a.nav__link(href=urlFor(knav))= vnav
else if (theme && theme.site && theme.site.logo)
  header.header
    nav.nav
      ul.nav__list
        li.nav__item
          a.nav__link(href="/")
            +inlineSvg(theme.site.logo)
